<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://www.symfony-project.org/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.symfony-project.org/schema/routing http://www.symfony-project.org/schema/routing/routing-1.0.xsd">
    <route id="organization_new" pattern="/new">
        <default key="_controller">PlanningBundle:Organization:new</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="organization_create" pattern="/new">
        <default key="_controller">PlanningBundle:Organization:create</default>
        <requirement key="_method">POST</requirement>
    </route>
    
    <route id="organization_edit" pattern="/:organization/edit">
        <default key="_controller">PlanningBundle:Organization:edit</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="organization_update" pattern="/:organization/edit">
        <default key="_controller">PlanningBundle:Organization:uodate</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="organization_delete" pattern="/:organization/delete">
        <default key="_controller">PlanningBundle:Organization:delete</default>
        <requirement key="_method">GET</requirement>
    </route>
</routes>